{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react-native",
    "noEmit": false,
    "incremental": true,
    "isolatedModules": true,
    "strict": false,
    "outDir": "./lib",
    "declaration": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["es2020"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
